require(game:GetService("ReplicatedStorage").Game.Notification).new(
{Text = "Thanks for using unpacked's ghost gui!", Duration = 3.5
})

local mouse = game:GetService('Players').LocalPlayer:GetMouse()

local function hotkeyHandler(key)
  if (key == 'q') then
    for _, v in next, getgc(true) do
      if (type(v) == 'table' and rawget(v, 'Nitro')) then
        v.Nitro = 250
      end
    end
  end
end

mouse.KeyDown:connect(hotkeyHandler)

local UI = require(game:GetService("ReplicatedStorage").Module:WaitForChild("UI"));
while wait() do
for i,v in pairs (UI.CircleAction.Specs) do
v.Duration = 0;
v.Timed = true;
end
end

for a,b in pairs(getreg()) do 
	if typeof(b) == "function" then 
		for c,d in pairs(debug.getupvalues(b)) do 
			if typeof(d) == "table" and d.FireServer then
				local FS = d.FireServer
				d.FireServer = function(a1, ...)
					if typeof(({...})[2]) == "number" and game:GetService("Players").LocalPlayer.Character:FindFirstChild("InVehicle") then 
						return FS(a1, ({...})[1], -math.huge)
					else
						return FS(a1, ...)
					end
				end
			end
		end
	end
end
end

for a,b in pairs(getgc()) do 
	if typeof(b) == "function" then 
		for c,d in pairs(debug.getupvalues(b)) do 
			if typeof(d) == "table" and rawget(d,"Fireworks") then
				d.Fireworks(math.huge)
			end
		end
	end
end

local GunsToMod = {'Pistol', 'AK47', 'Uzi', 'Revolver', 'Sniper', 'Shotgun', 'Taser'};
for i,v in next, game:GetService('ReplicatedStorage').Game.ItemConfig:GetChildren() do
	for i2, v2 in next, GunsToMod do
		if v2 == v.Name then
			rawset(require(v), 'MagSize', math.huge);
			rawset(require(v), 'ReloadTime', 0);
			rawset(require(v), 'FireFreq', math.huge);
			rawset(require(v), 'FireAuto', true);
			rawset(require(v), 'CamShakeMagnitude', 0);
		end;
	end;
end;
end

while true do
	for _, v in next, getgc(true) do
		if (type(v) == 'table' and rawget(v, 'LocalMaxFuel')) then
			v.LocalMaxFuel = math.huge
			v.LocalFuel = math.huge
			v.LocalFuelType = 'Rocket'
		end
	end
end
